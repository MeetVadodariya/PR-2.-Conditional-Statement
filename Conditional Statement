    <!-- 12.Write a JavaScript   program to input angles of a triangle and check whether triangle is valid or not. -->

    <!-- <script>

        function Triangle(angle1, angle2, angle3) 
        {
            return angle1 + angle2 + angle3 === 180;
        }
        
        {

            let angle1 = parseInt(prompt("Enter first angle of the triangle:"));
            let angle2 = parseInt(prompt("Enter second angle of the triangle:"));
            let angle3 = parseInt(prompt("Enter third angle of the triangle:"));

            if (Triangle(angle1, angle2, angle3)) 
            {
                document.write("The triangle is valid.");
            } else {
                document.write("The triangle is not valid.");
            }
        }

    </script> -->


