    <!-- 4. Write a JavaScript program to find which number is greater in 4 numbers using ladder if else. -->

    <!-- <script>
        let num1 = parseFloat(prompt("Enter the first number: "));
        let num2 = parseFloat(prompt("Enter the second number: "));
        let num3 = parseFloat(prompt("Enter the third number: "));
        let num4 = parseFloat(prompt("Enter the fourth number: "));
   
        {
            if (num1 >= num2 && num1 >= num3 && num1 >= num4) 
            {
                document.write(num1 + " is the largest.");
            } 
            else if (num2 >= num1 && num2 >= num3 && num2 >= num4) 
            {
                document.write(num2 + " is the largest.");
            } 
            else if (num3 >= num1 && num3 >= num2 && num3 >= num4) 
            {
                document.write(num3 + " is the largest.");
            } 
            else 
            {
                document.write(num4 + " is the largest.");
            }
        }
    </script> -->

